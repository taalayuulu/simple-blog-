{% extends "::base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/core/css/main.css') }}">
{% endblock %}
{% block body %}
    <header>


    <p>Symfony2 Blog</p>
    <nav>
        <ul>
            <li><a href="{{ path('blog_core_post_index') }}">Home</a></li>
        </ul>
    </nav>
    </header>
    {% block sidebar %}
    {% endblock %}
<section>
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <p class="session-message">{{ message }}</p>
        {% endfor %}
    {% endfor %}
    {% block section  %}

    {% endblock %}
</section>
<footer>
    <p>&copy; {{ 'now'|date('Y') }}Symfony2 Blog </p>
</footer>
{% endblock %}
