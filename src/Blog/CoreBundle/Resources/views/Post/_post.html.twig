<article>
    <header>
   <h2><a href="{{ path('blog_core_post_show',{slug: post.slug}) }}">{{ post.title }}</a></h2>
        <p>
            Posted on:
            <br>
            <time datetime="{{ post.createdAt|date('c') }}">{{ post.createdAt | date }}</time>
            <br>
            by <a href="{{ path('blog_core_author_show' , { slug: post.author.slug }) }}">{{ post.author.name }}</a>
        </p>
    </header>
    <p>
      {{ post.body | truncate(400)}} <a href="{{ path('blog_core_post_show',{slug: post.slug}) }}">read more </a>
    </p>
</article>