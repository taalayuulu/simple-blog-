<article>
    <header>
   <h2><a href="#">{{ post.title }}</a></h2>
        <p>
            Posted on:
            <br>
            <time datetime="{{ post.createdAt|date('c') }}">{{ post.createdAt | date }}</time>
            <br>
            by <a href="#">{{ post.author.name }}</a>
        </p>
    </header>
    <p>
      {{ post.body | truncate(400)}} <a href="#">read more </a>
    </p>
</article>