<article class="comment">
    <header>
        <p>
            {{ 'on' | capitalize }} <time datetime="{{ comment.createdAt | date('c') }}">{{ comment.createdAt |date }}</time>
            <br>
            {{ 'by' | capitalize }} {{ comment.authorName }}
        </p>
    </header>
    <p>
        {{ comment.body | nl2br }}
    </p>
</article>